        <Label x:Name="lblPass" Content="Password:" HorizontalAlignment="Left" Margin="64,101,0,0" VerticalAlignment="Top"/>
        <Button x:Name="buttonCancel" Content="Cancelar" HorizontalAlignment="Left" Margin="405,295,0,0" VerticalAlignment="Top" Width="75" Click="cancelarButton"/>
        <Button x:Name="buttonOK" Content="OK" HorizontalAlignment="Left" Margin="319,295,0,0" VerticalAlignment="Top" Width="75" Click="criarPerfilButton"/>
        <ComboBox x:Name="cmbInspetores" HorizontalAlignment="Left" Margin="229,192,0,0" VerticalAlignment="Top" Width="251"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="229,109,0,0" VerticalAlignment="Top" Width="251"/>

    </Grid>
</Window>