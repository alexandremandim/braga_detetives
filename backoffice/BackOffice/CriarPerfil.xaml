<Window x:Class="BackOffice.CriarPerfil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BackOffice"
        mc:Ignorable="d"
        Title="WindowCriarPerfil" Height="369.96" Width="550">
    <Grid Height="372" VerticalAlignment="Top">
        <Label x:Name="lblTipo" Content="Tipo de perfil:" HorizontalAlignment="Left" Margin="64,142,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radioButtonIC" Content="Inspector-Chefe" HorizontalAlignment="Left" Margin="229,148,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radioButtonAgente" Content="Agente" HorizontalAlignment="Left" Margin="382,148,0,0" VerticalAlignment="Top"/>
